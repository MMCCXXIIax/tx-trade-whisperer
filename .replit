modules = ["nodejs-20", "web"]

[nix]
channel = "stable-25_05"

[deployment]
deploymentTarget = "autoscale"
run = ["npm", "run", "preview", "--", "--host", "0.0.0.0", "--port", "5000"]
build = ["npm", "run", "build"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "TX Trading Platform"

[[workflows.workflow]]
name = "TX Trading Platform"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "bash -c 'npm run start & sleep 2 && npm run dev'"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 3000
externalPort = 3000
exposeLocalhost = true

[[ports]]
localPort = 5000
externalPort = 80

[agent]
integrations = ["javascript_database:1.0.0"]
expertMode = true
